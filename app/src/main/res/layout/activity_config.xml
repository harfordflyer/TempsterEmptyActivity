<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dhammond1.tempsteremptyactivity.ConfigActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/pidHeading"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Pit Settings"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:layout_weight="1.0"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/minPitRow"
        android:orientation="horizontal"
        android:layout_below="@id/pidHeading"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <EditText
            android:id="@+id/ed_minPit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_sizeEdit2"
            android:text="250"
            android:layout_marginRight="30dp"
            android:layout_gravity="bottom"
            android:focusable="true"
            android:inputType="number"
            android:maxLength="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Min Pit Temp"
            android:textSize="@dimen/text_sizeEdit"

            android:layout_weight="1.0"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/maxPitRow"
        android:orientation="horizontal"
        android:layout_below="@id/minPitRow"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <EditText
            android:id="@+id/ed_maxPit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_sizeEdit2"
            android:text="250"
            android:layout_marginRight="30dp"
            android:layout_gravity="bottom"
            android:focusable="true"
            android:inputType="number"
            android:maxLength="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Max Pit Temp"
            android:textSize="@dimen/text_sizeEdit"

            android:layout_weight="1.0"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/minFanRow"
        android:orientation="horizontal"
        android:layout_below="@id/maxPitRow"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <EditText
            android:id="@+id/ed_fanSpeed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_sizeEdit2"
            android:text="250"
            android:layout_marginRight="30dp"
            android:layout_gravity="bottom"
            android:focusable="true"
            android:inputType="number"
            android:visibility="invisible"
            android:maxLength="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Fan Speed"
            android:textSize="@dimen/text_sizeEdit"
            android:visibility="invisible"
            android:layout_weight="1.0"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pidHeading2"
        android:layout_below="@id/minFanRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Adv. Configurations"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:layout_weight="1.0"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kpRow"
        android:orientation="horizontal"
        android:layout_below="@id/pidHeading2"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <EditText
            android:id="@+id/ed_Kp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_sizeEdit2"
            android:text="5"
            android:layout_marginRight="30dp"
            android:layout_gravity="bottom"
            android:focusable="true"
            android:inputType="number"
            android:hint="00"
            android:textColorHint="@color/white"
            android:maxLength="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Kp Settings(5)"

            android:textSize="@dimen/text_sizeEdit"

            android:layout_weight="1.0"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kiRow"
        android:orientation="horizontal"
        android:layout_below="@id/kpRow"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <EditText
            android:id="@+id/ed_Ki"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_sizeEdit2"
            android:text="0"
            android:layout_marginRight="30dp"
            android:layout_gravity="bottom"
            android:focusable="true"
            android:inputType="number"
            android:hint="00"
            android:textColorHint="@color/white"
            android:maxLength="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Ki Settings (0)"

            android:textSize="@dimen/text_sizeEdit"

            android:layout_weight="1.0"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kdRow"
        android:orientation="horizontal"
        android:layout_below="@id/kiRow"
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <EditText
            android:id="@+id/ed_Kd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_sizeEdit2"
            android:text="0"
            android:layout_marginRight="30dp"
            android:layout_gravity="bottom"
            android:focusable="true"
            android:inputType="number"
            android:hint="00"
            android:textColorHint="@color/white"
            android:maxLength="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Kd Settings (0)"

            android:textSize="@dimen/text_sizeEdit"
            android:layout_weight="1.0"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sampleTimeRow"
        android:orientation="horizontal"
        android:layout_below="@id/kdRow"
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <EditText
            android:id="@+id/ed_SampleTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_sizeEdit2"
            android:text="0"
            android:layout_marginRight="30dp"
            android:layout_gravity="bottom"
            android:focusable="true"
            android:inputType="number"
            android:hint="000"
            android:textColorHint="@color/white"
            android:maxLength="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:text="PID Sample Time(sec)"
            android:textSize="@dimen/text_sizeEdit"

            android:layout_weight="1.0"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/saveDataRow"
        android:orientation="horizontal"
        android:layout_below="@id/sampleTimeRow"
        android:layout_width="match_parent"
        android:layout_height="43dp" >

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chk_saveGraph"
            android:text="@string/chk_saveData"
            android:textSize="25dp"
            android:checked="true"
            android:onClick="SaveDataClick"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearSaveConfig"
        android:orientation="horizontal"
        android:layout_below="@id/saveDataRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>
    </RelativeLayout>
</ScrollView>

</RelativeLayout>
